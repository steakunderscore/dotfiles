# Set your name and email with the following:
#   git config -f ~/.gitconfig.local user.name "John Appleseed"
#   git config -f ~/.gitconfig.local user.email me@example.com

[include]
  path = ~/.gitconfig.local
[color]
  ui = auto
[core]
  editor = vim
  excludesfile = ~/.gitignore
[rebase]
  autosquash = true
[color "diff"]
  commit = yellow reverse
[diff]
  renames = true
[push]
  default = current
[fetch]
  prune = true
[merge]
  log = true
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  prompt = false
  keepBackup = false
[alias]
  co = checkout
  ci = commit
  rb = rebase
  rc = rebase --continue
  rs = rebase --skip
  br = branch -vva
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  rp = remote prune
  statsu = status
  st = status
  scrub = clean -dxf
  push = push --recurse-submodules=check
  hunt = log --after='48 hours ago' --author
  work = checkout origin/master -b
  ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ -o .gitignore ;}; gi"
[branch]
  autosetuprebase = always
[grep]
  linenumber = true
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
